{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }